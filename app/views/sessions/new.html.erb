<div class="container">
    <h2>Sign In</h2>
    <%if flash[:notice] %>
      <h3>
        <%= flash[:notice]%>
      </h3>
    <%end%>
    <%= form_tag sessions_url do %>
        <div>
          <%= label_tag :email %>
          <br>
          <%= text_field_tag :email %>
        </div>

        <div>
          <%= label_tag :password %>
          <br>
          <%= password_field_tag :password %>
        </div>

        <%= submit_tag 'Sign In!', {:class=>'btn btn-default'} %>
        <%= link_to 'Cancel', root_url, {:class=>'btn btn-default'} %>
    <% end %>
</div>