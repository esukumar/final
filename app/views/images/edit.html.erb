<div class="container">
    <h2>Edit this Image</h2>
    <% if @image.errors.any? %>
        <ul>
          <% @image.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
          <% end %>
        </ul>
    <% end %>

    <%= form_tag event_image_url(@event,@image), :method => 'patch' do %>
        <div>
          <%= label_tag 'title' %>
          <br>
          <%= text_field_tag 'title', @image.title, size:30 %>
        </div>

        <div>
          <%= label_tag 'picture', 'Description' %>
          <br>
          <%= text_field_tag 'picture', @image.picture, size:120 %>
        </div>

        <%=submit_tag 'Update Image', {:class=>'btn btn-default'}%>
        <%= link_to 'Cancel', :back, {:class=>'btn btn-default'} %>
    <% end %>
</div>