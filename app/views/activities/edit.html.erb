<div class="container">
    <h2>Edit this Activity</h2>
    <% if @errors.any? %>
        <ul>
          <% @errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
          <% end %>
        </ul>
    <% end %>

    <%= form_tag activity_url(@activity), :method => 'patch' do %>
        <div>
          <%= label_tag 'title' %>
          <br>
          <%= text_field_tag 'title', @activity.title, size:30 %>
        </div>
        <%=submit_tag 'Update Activity', {:class=>'btn btn-default'}%>
        <%= link_to 'Cancel', :back, {:class=>'btn btn-default'} %>
    <% end %>
</div>