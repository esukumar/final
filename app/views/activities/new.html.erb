<div class="container">
    <h2>Add a New Activity (<%=@activity.title%>)</h2>
    <% if @errors.any? %>
        <ul>
          <% @errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
          <% end %>
        </ul>
    <% end %>

    <%= form_tag event_activities_url(@event), :method => 'post' do %>
        <div>
          <%= label_tag 'title' %>
          <br>
          <%= text_field_tag 'title', @activity.title, size:30 %>
        </div>
        <%=submit_tag 'Add Activity', {:class=>'btn btn-default'}%>
        <%= link_to 'Cancel', :back, {:class=>'btn btn-default'} %>
    <% end %>
</div>