<div class="container">
    <h2>Add a New Activity</h2>
    <% if @activity.errors.any? %>
        <ul>
          <% @activity.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
          <% end %>
        </ul>
    <% end %>

    <%= form_tag event_activities_url(@event), :method => 'post' do %>
        <div>
          <%= label_tag "title" %>
          <br>
          <%= text_field_tag "title", @activity.title, size:30 %>
        </div>
        <%=submit_tag "Add Activity"%>
    <% end %>
</div>