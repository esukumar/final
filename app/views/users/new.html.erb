<div class="container">
    <h3>Sign Up</h3>
    <% if @user.errors.any? %>
        <ul class="errors">
          <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
          <% end %>
        </ul>
    <% end %>

    <%= form_tag users_url do %>

        <p>
          <%= label_tag :email %>
          <%= text_field_tag :email %>
        </p>

        <p>
          <%= label_tag :password %>
          <%= text_field_tag :password %>
        </p>

        <p>
          <%= label_tag :name %>
          <%= text_field_tag :name %>
        </p>
        <%= submit_tag "Sign Me Up!" %>
    <% end %>
</div>
