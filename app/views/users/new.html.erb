<div class="container">
    <h3>Sign Up</h3>
    <% if @user.errors.any? %>
        <ul class="errors">
          <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
          <% end %>
        </ul>
    <% end %>

    <%= form_tag users_url do %>
        <div>
          <%= label_tag :email %>
          <br>
          <%= text_field_tag :email %>
        </div>

        <div>
          <%= label_tag :password %>
          <br>
          <%= text_field_tag :password %>
        </div>

        <div>
          <%= label_tag :name %>
          <br>
          <%= text_field_tag :name %>
        </div>
        <%= submit_tag "Sign Up!" %>
    <% end %>
</div>
