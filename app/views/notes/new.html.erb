<h2>Add a New Note</h2>

<% if @note.errors.any? %>
    <ul>
      <% @note.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
      <% end %>
    </ul>
<% end %>

<%= form_tag notes_url(:event_id=>@event.id), :method => 'post' do %>
    <div>
      <%= label_tag "title" %>
      <%= text_field_tag "title", @note.title, size:30 %>
    </div>

    <div>
      <!--<label for="desc">Description:</label>-->
      <!--<textarea cols="80" rows="3" name="desc" id="desc"></textarea>-->
      <%= label_tag "desc", "Description" %>
      <%= text_area_tag "desc", @note.desc, rows:3, cols:80 %>
    </div>

    <%=submit_tag "Add Note"%>
    <!--<input type="submit" name="commit" value="Add Note">-->
<% end %>