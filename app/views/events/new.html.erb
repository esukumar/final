<div class="container">
    <h2>Add a New Event</h2>
    <% if @event.errors.any? %>
        <ul>
          <% @event.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
          <% end %>
        </ul>
    <% end %>

    <%= form_tag events_url, :method => 'post' do %>
        <div>
          <%= label_tag "title" %>
          <br>
          <%= text_field_tag "title", @event.title, size:30 %>
        </div>

        <div>
          <%= label_tag "picture", "Picture URL" %>
          <br>
          <%= text_field_tag "picture", @event.picture, size:80 %>
        </div>
        <%=submit_tag "Add Event"%>
    <% end %>
</div>